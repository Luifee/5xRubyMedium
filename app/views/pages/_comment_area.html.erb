<section class="comment-editor">
  <% if user_signed_in? %>
    <%= form_with model: comment, url: memo_comments_path(memo), remote: true do |form| %>
      <%= form.text_area :content, rows: 5, class: 'textarea is-small' %>
      <%= form.button '送出', class: 'button is-primary is-fullwidth' %>
    <% end %>
  <% else %>
    <%= link_to "登入", new_user_session_path, class: 'button is-primary' %> <%= link_to "註冊", new_user_registration_path, class: 'button is-info' %>
  <% end %>
</section>
