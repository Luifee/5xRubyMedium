<div class="container is-fluid">
  <p class="title is-1">Hello World!</p>
  <p class="content is-large">Coming and writing.</p>
  <%= link_to "註冊帳號", new_user_registration_path, class: 'button is-primary' %>
  <hr />
  <section class="trend">
    <p class="title is-6">TRENDING ON MY MEDIUM</p>
    <div class="wrap">
      <% @memos.each do |memo| %>
      <div class="memo">
        <article class="media">
          <div class="media-content">
            <span class="title is-6"><%= link_to memo.title, memo_page_path(memo.user.username, memo), class: 'has-text-grey' %></span>
            <p class="abstract is-size-7"><%= strip_tags(memo.content).truncate(80) %></p>
            <p class="is-size-7">by <%= link_to memo.user.username, user_page_path(memo.user.username), class: 'has-text-black' %> | @ <%= time_ago_in_words(memo.created_at) %>前</p>
          </div>
          <figure class="media-right">
            <% if memo.cover_image.attached? %>
              <%= image_tag memo.cover_image.variant(resize: '100x100') %>
            <% end %>
          </figure>
        </article>
      </div>
      <% end %>
    </div>
    <hr />
  </section>
  <section>
    <div class="column">
      <article class="media">
        <div class="media-content">
          <span class="heading">Author</span>
          <p class="title is-5">Title</p>
          <span class="is-size-7">Created at</span>
	</div>
        <figure class="media-right">

        </figure>
      </article>
    </div>
  </section>
</div>
